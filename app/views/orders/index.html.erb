<div class="admin-panel">
  <h1>Orders</h1>
  <p>
    <%= button_to new_order_path, method: :get, class: 'btn btn-primary' do %>
      <span class="glyphicon"></span>
      Add order
    <% end %>
  </p>

  <% if @orders.empty? %>
    <b>No orders</b>
  <% else %>

  <div class="table-index">
    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Property type</th>
          <th>Property address</th>
          <th>Sqft</th>
          <th>Number of units</th>
          <th>Detach space</th>
          <th>Photo type</th>
          <th>Exterior tour</th>
          <th>Floor plan</th>
          <th>Custome domain</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody id="orders">
        <%= render partial: "order", :collection => @orders, as: :order %>
      </tbody>
    </table>
  </div>
  <div id="paginator", class="paginate-centre">
    <%= paginate @orders, remote: true %>
  </div>
  <% end %>

  <p>
    <%= button_to 'Back', admin_path, method: :get, class: "btn btn-default" %>
  </p>
</div>